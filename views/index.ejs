<h2 class="text-center">Welcome to My Blog!</h2>
<p class="text-center">I will post blogs here.</p>

<!-- Create Article Button -->
<div class="container">
    <h1>Articles</h1>
    <a href="/articles/new" class="btn btn-success">Create a new article</a>
</div>

<!-- Display Articles -->
<div class="container">
    <% articles.forEach(article => { %>
        <div class="card mt-4">
            <h1 class="card-header"><%= article.title %></h1>
            <div class="card-body">
                <div class="card-subtitle mb-2 text-muted"><%= article.createdAt.toLocaleDateString() %></div>
                <div class="card-text mb-2"><%= article.description %></div>
            </div>
        </div>
    <% }); %>
</div>